<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"

    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_haoma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="预约号"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tv_leixing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="科室" />

                    <TextView
                        android:id="@+id/tv_yishi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="医师" />

                    <TextView
                        android:id="@+id/tv_jiage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="费用" />

                    <TextView
                        android:id="@+id/tv_zhouji"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:padding="5dp"
                        android:text="预约时间:" />


                    <TextView
                        android:id="@+id/tv_zhuangtai"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="进行中"
                        android:padding="10dp"
                        android:gravity="center"

                        />

                    <TextView
                        android:id="@+id/tv_erweima"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="出示二维码"
                        android:background="@drawable/bt_selector1"
                        android:padding="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"

                        />

                    <TextView
                        android:id="@+id/tv_quxiao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="取消预约"
                        android:background="@drawable/bt_selector2"
                        android:layout_marginBottom="10dp"
                        android:padding="10dp"
                        android:gravity="center"

                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>